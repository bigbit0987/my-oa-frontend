<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" 
             xmlns:omgdc="http://www.omg.org/spec/DD/20100524/DC" 
             xmlns:omgdi="http://www.omg.org/spec/DD/20100524/DI" 
             xmlns:flowable="http://flowable.org/bpmn" 
             targetNamespace="http://www.company.com/workflow" 
             exporter="Camunda Modeler" 
             exporterVersion="5.41.0">

  <process id="announcement_map_flow_process" name="公告图流程" isExecutable="true">
    <documentation>
      手动发起 - 公告图流程
      流程说明：项目负责人填写公告信息 -> 技术办审批 -> 信息中心发布
    </documentation>

    <startEvent id="startEvent" name="开始" flowable:initiator="initiator" />
    
    <sequenceFlow id="flow_start_to_pm" sourceRef="startEvent" targetRef="task_pm_fill" />

    <userTask id="task_pm_fill" name="项目负责人填写公告信息" flowable:assignee="${initiator}" flowable:formKey="announcement_map_flow">
      <documentation>项目负责人填写公告类型、发布日期、内容描述、上传附件</documentation>
    </userTask>

    <sequenceFlow id="flow_pm_to_tech" sourceRef="task_pm_fill" targetRef="task_tech_approve" />

    <userTask id="task_tech_approve" name="技术办审批" flowable:candidateGroups="TECH_OFFICE" flowable:formKey="announcement_map_flow">
      <documentation>技术办审批公告内容</documentation>
    </userTask>

    <sequenceFlow id="flow_tech_to_info" sourceRef="task_tech_approve" targetRef="task_info_publish" />

    <userTask id="task_info_publish" name="信息中心发布" flowable:candidateGroups="INFO_CENTER" flowable:formKey="announcement_map_flow">
      <documentation>信息中心确认并发布公告图</documentation>
    </userTask>

    <sequenceFlow id="flow_info_to_end" sourceRef="task_info_publish" targetRef="endEvent" />

    <endEvent id="endEvent" name="结束" />

  </process>

  <bpmndi:BPMNDiagram id="BPMNDiagram_announce">
    <bpmndi:BPMNPlane id="BPMNPlane_announce" bpmnElement="announcement_map_flow_process">
      <bpmndi:BPMNShape id="shape_startEvent" bpmnElement="startEvent">
        <omgdc:Bounds x="150" y="200" width="30" height="30" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="shape_task_pm_fill" bpmnElement="task_pm_fill">
        <omgdc:Bounds x="230" y="185" width="100" height="60" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="shape_task_tech_approve" bpmnElement="task_tech_approve">
        <omgdc:Bounds x="380" y="185" width="100" height="60" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="shape_task_info_publish" bpmnElement="task_info_publish">
        <omgdc:Bounds x="530" y="185" width="100" height="60" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="shape_endEvent" bpmnElement="endEvent">
        <omgdc:Bounds x="680" y="200" width="28" height="28" />
      </bpmndi:BPMNShape>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
</definitions>
