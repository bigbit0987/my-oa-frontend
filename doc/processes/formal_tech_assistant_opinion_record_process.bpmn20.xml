<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" 
             xmlns:omgdc="http://www.omg.org/spec/DD/20100524/DC" 
             xmlns:omgdi="http://www.omg.org/spec/DD/20100524/DI" 
             xmlns:flowable="http://flowable.org/bpmn" 
             targetNamespace="http://www.company.com/workflow" 
             exporter="Camunda Modeler" 
             exporterVersion="5.41.0">

  <process id="formal_tech_assistant_opinion_record_process" name="正式成果技术助理意见流程" isExecutable="true">
    <documentation>
      正式成果阶段 - 技术助理意见（自动触发）
      V类项目不走此流程
      流程说明：项目负责人 -> 技术助理选定审核人 -> 审核人填写意见 -> 修改人修改(可选入库检测) -> 技术助理验证
    </documentation>

    <startEvent id="startEvent" name="开始" flowable:initiator="initiator" />
    
    <sequenceFlow id="flow_start_to_pm" sourceRef="startEvent" targetRef="task_pm_select_modifier" />

    <userTask id="task_pm_select_modifier" name="项目负责人选择修改人" flowable:assignee="${initiator}" flowable:formKey="formal_tech_assistant_opinion_record">
      <documentation>项目负责人选择修改人</documentation>
    </userTask>

    <sequenceFlow id="flow_pm_to_tech" sourceRef="task_pm_select_modifier" targetRef="task_tech_assign_reviewer" />

    <userTask id="task_tech_assign_reviewer" name="技术办指定审核人" flowable:candidateGroups="TECH_OFFICE" flowable:formKey="formal_tech_assistant_opinion_record">
      <documentation>技术办指定技术办审核人</documentation>
    </userTask>

    <sequenceFlow id="flow_tech_to_reviewer" sourceRef="task_tech_assign_reviewer" targetRef="task_reviewer_opinion" />

    <userTask id="task_reviewer_opinion" name="审核人填写意见" flowable:assignee="${techOfficeReviewerId}" flowable:formKey="formal_tech_assistant_opinion_record">
      <documentation>技术助理填写审核意见</documentation>
    </userTask>

    <sequenceFlow id="flow_reviewer_to_modifier" sourceRef="task_reviewer_opinion" targetRef="task_modifier_revise" />

    <userTask id="task_modifier_revise" name="修改人修改成果" flowable:assignee="${modifierId}" flowable:formKey="formal_tech_assistant_opinion_record">
      <documentation>修改人按意见修改成果，填写修改记录，可选择是否申请入库检测</documentation>
    </userTask>

    <sequenceFlow id="flow_modifier_to_gateway" sourceRef="task_modifier_revise" targetRef="gateway_detection" />

    <exclusiveGateway id="gateway_detection" name="是否申请入库检测?" />

    <sequenceFlow id="flow_need_detection" name="需要检测" sourceRef="gateway_detection" targetRef="task_info_center_detect">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${vars:getOrDefault('applyDetection', 'no') == 'yes'}]]></conditionExpression>
    </sequenceFlow>

    <sequenceFlow id="flow_no_detection" name="无需检测" sourceRef="gateway_detection" targetRef="task_tech_verify">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${vars:getOrDefault('applyDetection', 'no') != 'yes'}]]></conditionExpression>
    </sequenceFlow>

    <userTask id="task_info_center_detect" name="信息中心入库检测" flowable:candidateGroups="INFO_CENTER" flowable:formKey="formal_tech_assistant_opinion_record">
      <documentation>信息中心进行入库检测</documentation>
    </userTask>

    <sequenceFlow id="flow_detect_to_verify" sourceRef="task_info_center_detect" targetRef="task_tech_verify" />

    <userTask id="task_tech_verify" name="技术助理验证" flowable:assignee="${techOfficeReviewerId}" flowable:formKey="formal_tech_assistant_opinion_record">
      <documentation>技术助理验证修改后成果</documentation>
    </userTask>

    <sequenceFlow id="flow_verify_to_gateway" sourceRef="task_tech_verify" targetRef="gateway_verify_result" />

    <exclusiveGateway id="gateway_verify_result" name="验证结果" />

    <sequenceFlow id="flow_verify_pass" name="通过" sourceRef="gateway_verify_result" targetRef="endEvent">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${vars:getOrDefault('modifiedAsRequired', 'no') == 'yes' || vars:getOrDefault('finalAgree', 'no') == 'yes'}]]></conditionExpression>
    </sequenceFlow>

    <sequenceFlow id="flow_verify_fail" name="不通过" sourceRef="gateway_verify_result" targetRef="task_modifier_revise">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${vars:getOrDefault('modifiedAsRequired', 'no') != 'yes' && vars:getOrDefault('finalAgree', 'no') != 'yes'}]]></conditionExpression>
    </sequenceFlow>

    <endEvent id="endEvent" name="结束" />

  </process>

  <bpmndi:BPMNDiagram id="BPMNDiagram_formal_tech">
    <bpmndi:BPMNPlane id="BPMNPlane_formal_tech" bpmnElement="formal_tech_assistant_opinion_record_process">
      <bpmndi:BPMNShape id="shape_startEvent" bpmnElement="startEvent">
        <omgdc:Bounds x="100" y="200" width="30" height="30" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="shape_task_pm_select_modifier" bpmnElement="task_pm_select_modifier">
        <omgdc:Bounds x="180" y="185" width="100" height="60" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="shape_task_tech_assign_reviewer" bpmnElement="task_tech_assign_reviewer">
        <omgdc:Bounds x="330" y="185" width="100" height="60" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="shape_task_reviewer_opinion" bpmnElement="task_reviewer_opinion">
        <omgdc:Bounds x="480" y="185" width="100" height="60" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="shape_task_modifier_revise" bpmnElement="task_modifier_revise">
        <omgdc:Bounds x="630" y="185" width="100" height="60" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="shape_endEvent" bpmnElement="endEvent">
        <omgdc:Bounds x="1180" y="200" width="28" height="28" />
      </bpmndi:BPMNShape>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
</definitions>
